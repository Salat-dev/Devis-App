{
  "id": "com.devisapp.pwa",
  "name": "Devis App",
  "short_name": "Devis App",
  "description": "Créez et gérez vos devis professionnels en quelques minutes. Export PDF, envoi WhatsApp & Email, gestion clients.",
  "start_url": "/app/dashboard.html?source=pwa",
  "scope": "/",
  "lang": "fr",
  "dir": "ltr",

  "display": "standalone",
  "display_override": ["standalone", "minimal-ui", "browser"],

  "background_color": "#111827",
  "theme_color": "#F97316",
  "orientation": "portrait-primary",

  "categories": ["business", "finance", "productivity"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",

  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.devisapp.pwa",
      "id": "com.devisapp.pwa"
    },
    {
      "platform": "webapp",
      "url": "https://devisapp.netlify.app/manifest.json"
    }
  ],

  "icons": [
    { "src": "/icons/icon-72x72.png",             "sizes": "72x72",   "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-96x96.png",             "sizes": "96x96",   "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-128x128.png",           "sizes": "128x128", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-144x144.png",           "sizes": "144x144", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-152x152.png",           "sizes": "152x152", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-192x192.png",           "sizes": "192x192", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-192x192-maskable.png",  "sizes": "192x192", "type": "image/png", "purpose": "maskable" },
    { "src": "/icons/icon-384x384.png",           "sizes": "384x384", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-512x512.png",           "sizes": "512x512", "type": "image/png", "purpose": "any" },
    { "src": "/icons/icon-512x512-maskable.png",  "sizes": "512x512", "type": "image/png", "purpose": "maskable" }
  ],

  "screenshots": [
    {
      "src": "/icons/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Dashboard Devis App sur mobile"
    },
    {
      "src": "/icons/screenshot-desktop.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Dashboard Devis App sur desktop"
    }
  ],

  "shortcuts": [
    {
      "name": "Nouveau devis",
      "short_name": "Nouveau devis",
      "description": "Créer un nouveau devis rapidement",
      "url": "/app/create-quote.html?source=shortcut",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Mes clients",
      "short_name": "Clients",
      "description": "Accéder à la liste des clients",
      "url": "/app/liste-clients.html?source=shortcut",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96", "type": "image/png" }]
    },
    {
      "name": "Mes devis",
      "short_name": "Devis",
      "description": "Voir tous mes devis",
      "url": "/app/quotes.html?source=shortcut",
      "icons": [{ "src": "/icons/icon-96x96.png", "sizes": "96x96", "type": "image/png" }]
    }
  ],

  "share_target": {
    "action": "/app/create-quote.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "file_handlers": [
    {
      "action": "/app/dashboard.html",
      "accept": {
        "application/pdf": [".pdf"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "web+devisapp",
      "url": "/app/view-quote.html?id=%s"
    }
  ],

  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "scope_extensions": [
    { "origin": "https://devisapp.netlify.app" }
  ],

  "note_taking": {
    "new_note_url": "/app/create-quote.html"
  },

  "widgets": [
    {
      "name": "Devis rapide",
      "short_name": "Devis",
      "description": "Accès rapide à la création d'un devis",
      "tag": "devis-widget",
      "ms_ac_template": "/widgets/devis-widget.json",
      "data": "/widgets/devis-data.json",
      "type": "application/json",
      "screenshots": [
        {
          "src": "/icons/screenshot-mobile.png",
          "sizes": "390x844",
          "label": "Widget Devis App"
        }
      ],
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }],
      "backgrounds": [{ "src": "/icons/icon-512x512-maskable.png", "sizes": "512x512" }],
      "auth": true,
      "update": 86400
    }
  ]
}
